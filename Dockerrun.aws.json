{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "dahyor/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "dahyor/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "dahyor/multi-worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "nginx:1.21.3-alpine",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client", "server"],
            "mountPoints": [
                {
                    "sourceVolume": "nginx-config",
                    "containerPath": "/etc/nginx/conf.d/default.conf",
                    "readOnly": true
                }
            ]
        }
    ],

    "volumes": [
        {
            "name": "nginx-config",
            "host": {
                "sourcePath": "./nginx.conf"
            }
        }
    ]
}